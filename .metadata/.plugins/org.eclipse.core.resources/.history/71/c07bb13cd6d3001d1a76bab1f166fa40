	<form method = "post">
		<input type = 'text' name = "english_ch" value = "${english}">
		<input type = 'text' name = "korean_ch" value = "${korean}">
		<input type = "submit" value = "수정하기" onclick="clickEvent()">
	</form> 


	<script>
	function wait(sec) {
	    let start = Date.now(), now = start;
	    while (now - start < sec * 1000) {
	        now = Date.now();
	    }
	}
	
		function clickEvent(){
				wait(3);
				self.close();
				
			
		}
		
		
		
	</script>

